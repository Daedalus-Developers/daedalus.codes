{
	"name": "daedalus.codes",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev:api": "node -e \"const exec = process.platform === 'win32' ? 'pocketbase.exe' : 'pocketbase'; require('child_process').execFileSync('./pb/' + exec, ['serve'], { stdio: 'inherit' })\"",
		"dev:web": "vite dev --host",
		"dev": "pnpm run dev:api & pnpm run dev:web",
		"dev:be": "./pb/pocketbase serve",
		"migrate": "./pb/pocketbase migrate",
		"build": "vite build",
		"build:node": "cross-env ADAPTER=node vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check ./src && eslint ./src",
		"format": "prettier --write ./src",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@cartamd/plugin-attachment": "^4.0.2",
		"@cartamd/plugin-code": "^4.0.5",
		"@cartamd/plugin-emoji": "^4.0.2",
		"@cartamd/plugin-slash": "^4.0.2",
		"@iconify/svelte": "^4.0.2",
		"@playwright/test": "^1.44.1",
		"@skeletonlabs/skeleton": "^2.10.1",
		"@skeletonlabs/tw-plugin": "^0.4.0",
		"@sveltejs/adapter-auto": "^3.2.2",
		"@sveltejs/adapter-node": "^5.2.0",
		"@sveltejs/enhanced-img": "^0.3.0",
		"@sveltejs/kit": "^2.5.17",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@tailwindcss/forms": "^0.5.3",
		"@tailwindcss/typography": "^0.5.13",
		"@types/node": "^20.14.7",
		"@typescript-eslint/eslint-plugin": "^7.13.1",
		"@typescript-eslint/parser": "^7.13.1",
		"autoprefixer": "^10.4.19",
		"carta-md": "^4.2.1",
		"clsx": "^2.1.1",
		"date-fns": "^3.6.0",
		"decode-formdata": "^0.7.5",
		"dotenv": "^16.4.5",
		"eslint": "^9.5.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.40.0",
		"pocketbase": "^0.21.3",
		"postcss": "^8.4.38",
		"postcss-load-config": "^6.0.1",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.5",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"svelte": "5.0.0-next.162",
		"svelte-check": "^3.8.1",
		"sveltekit-search-params": "^2.1.2",
		"sveltekit-superforms": "^2.15.1",
		"sveltekit-view-transition": "^0.5.3",
		"tailwind-merge": "^2.3.0",
		"tailwindcss": "^3.4.4",
		"tslib": "^2.6.3",
		"typescript": "^5.5.2",
		"vite": "^5.3.1",
		"vite-plugin-tailwind-purgecss": "^0.3.3",
		"vitest": "^1.6.0",
		"zod": "^3.23.8"
	},
	"type": "module",
	"dependencies": {
		"@floating-ui/dom": "^1.5.3",
